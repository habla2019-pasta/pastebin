{
    "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules/",
    ".browserlintrc",
    "dist/**/*"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [ "error", 2 ],
    "no-trailing-spaces": "error",
    "quotes": [ "error", "single" ]
  }
}
